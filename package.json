{
  "private": true,
  "scripts": {
    "build": "shx rm -rf dist && ttsc && ts-node build.ts",
    "postinstall": "patch-package && (is-ci || husky install)",
    "lint": "lint-staged --allow-empty -p false",
    "lint:all": "git add . && pnpm lint --all --no-stash",
    "release": "pnpm lint:all && pnpm build && release-it",
    "test": "mocha -r ts-node/register src/**/*.spec.ts"
  },
  "devDependencies": {
    "@commitlint/cli": "latest",
