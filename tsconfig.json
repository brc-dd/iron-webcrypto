{
  "extends": "@tsconfig/node12/tsconfig.json",
  "compilerOptions": {
    "lib": ["es2019", "es2020.promise", "es2020.bigint", "es2020.string", "dom", "dom.iterable"],
    "skipLibCheck": false,
    "allowJs": true,
    "baseUrl": "src",
    "declaration": true,
    "exactOptionalPropertyTypes": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist"
  },
  "exclude": ["src/**.spec.ts", "dist"]
}
