{
  "name": "iron-webcrypto",
  "version": "2.0.0",
  "description": "a cryptographic utility for sealing-unsealing a JSON object using symmetric key encryption with message integrity verification",
  "keywords": [
    "authentication",
    "data integrity",
    "encryption",
    "webcrypto"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/brc-dd/iron-webcrypto.git"
  },
  "funding": "https://github.com/sponsors/brc-dd",
  "license": "MIT",
  "author": "Divyansh Singh <brc-dd@hotmail.com> (https://github.com/brc-dd)",
  "exports": "./src/index.ts",
  "tasks": {
    "run": "deno -A jsr:@brc-dd/run@0.2.0 -- -A",
    "format": "deno fmt",
    "format:fail": "deno fmt --check",
    "lint": "deno lint --fix",
    "lint:fail": "deno lint",
    "test": "deno test",
    "test:watch": "deno test --watch",
    "type": "deno check **/*.ts",
    "check:only": "deno task format:fail && deno task lint:fail && deno task type",
    "check": "deno task check:only && deno task test",
    "build": "deno task run #/build.ts --bundler=rolldown --jsr-name=@brc-dd/iron",
    "release": "deno task run #/release.ts",
    "update": "deno task run #/update.ts"
  },
  "imports": {
    "#/": "https://raw.githubusercontent.com/globalbrain/hado/v0.19.6/scripts/",
    "@std/assert": "jsr:@std/assert@^1.0.16",
    "cross-bdd": "npm:cross-bdd@^0.2.0",
    "uint8array-extras": "npm:uint8array-extras@^1.5.0"
  },
  "build": {
    "deps": [
      "uint8array-extras"
    ]
  },
  "fmt": {
    "lineWidth": 120,
    "proseWrap": "never",
    "semiColons": false,
    "singleQuote": true
  },
  "compilerOptions": {
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  }
}
